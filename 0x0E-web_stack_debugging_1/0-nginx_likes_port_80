#!/usr/bin/env bash
#Bash script with the minimum number of commands to automate your fix.
if ! command -v nginx; then
apt-get update
apt-get install -y nginx
service nginx start
fi
if ! ss -tl | grep 80 > /dev/null; then
sed -i 's/listen [^;]*;/listen 80;/g' /etc/nginx/nginx.conf
service nginx restart
fi
if ! ss -tlnp | grep -q 'nginx:[[:space:]]*http'; then
    echo "Error: Nginx is not listening on port 80"
    exit 1
fi
